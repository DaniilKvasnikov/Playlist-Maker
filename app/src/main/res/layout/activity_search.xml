<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/background_settings"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/panel_header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/background_settings"
        app:navigationIcon="@drawable/ic_back_16"
        app:title="@string/text_search"
        app:titleTextAppearance="@style/HeaderTitleStyle"
        app:titleTextColor="@color/text_color_header_settings" />
    <FrameLayout
        android:id="@+id/searchContainer"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/rect_bg_search_container"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:paddingHorizontal="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:contentDescription="@null"
                android:src="@drawable/ic_search_icon_16"
                android:layout_marginEnd="8dp"
                app:tint="@color/icon_color_search" />

            <EditText
                android:id="@+id/edittext_search"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:autofillHints=""
                android:hint="@string/text_search_edittext"
                android:textColorHint="@color/text_color_search"
                android:inputType="text"
                android:maxLines="1"
                android:background="@android:color/transparent"
                android:textSize="16sp"
                android:textColor="@color/text_color"
                android:imeOptions="actionDone"
                android:singleLine="true"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/button_clear"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="end|center_vertical"
            android:contentDescription="@null"
            android:src="@drawable/ic_clear_24"
            android:background="@android:color/transparent"
            app:tint="@color/text_color_search"
            android:visibility="gone"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            tools:listitem="@layout/item_track"/>

        <LinearLayout
            android:id="@+id/empty_placeholder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top|center_horizontal"
            android:paddingTop="106dp"
            android:orientation="vertical"
            android:visibility="gone"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginBottom="16dp"
                android:contentDescription="@null"
                android:src="@drawable/ic_empty_search_note_120"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/search_not_found"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:textColor="@color/search_not_found_text_color"
                android:textSize="19sp"
                android:fontFamily="@font/ys_display_regular"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/error_placeholder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top|center_horizontal"
            android:orientation="vertical"
            android:paddingTop="102dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginBottom="16dp"
                android:contentDescription="@null"
                android:src="@drawable/ic_connection_error_120" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/ys_display_regular"
                android:gravity="center"
                android:text="@string/problems_with_connection"
                android:textColor="@color/search_not_found_text_color"
                android:textSize="19sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_retry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/not_found_icon"
                android:paddingHorizontal="14dp"
                android:paddingVertical="10dp"
                android:text="@string/refresh_search"
                android:textAllCaps="false"
                android:textColor="@color/not_found_text_refresh"
                android:textSize="14sp"
                android:fontFamily="@font/ys_display_regular"
                app:cornerRadius="54dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/history_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/history_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="12dp"
                android:text="@string/search_history_title"
                android:textSize="19sp"
                android:textColor="@color/text_color_settings"
                android:fontFamily="@font/ys_display_medium"
                android:gravity="center"/>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="8dp"
                android:paddingBottom="72dp"
                android:clipToPadding="false"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="16dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/history_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        tools:listitem="@layout/item_track"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_clear_history_inline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="24dp"
                        android:backgroundTint="@color/not_found_icon"
                        android:paddingHorizontal="14dp"
                        android:paddingVertical="10dp"
                        android:text="@string/clear_history"
                        android:textAllCaps="false"
                        android:textColor="@color/not_found_text_refresh"
                        android:textSize="14sp"
                        android:fontFamily="@font/ys_display_medium"
                        android:letterSpacing="0"
                        app:cornerRadius="54dp" />

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_clear_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:backgroundTint="@color/not_found_icon"
                android:paddingHorizontal="14dp"
                android:paddingVertical="10dp"
                android:text="@string/clear_history"
                android:textAllCaps="false"
                android:textColor="@color/not_found_text_refresh"
                android:textSize="14sp"
                android:fontFamily="@font/ys_display_medium"
                android:letterSpacing="0"
                app:cornerRadius="54dp" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>