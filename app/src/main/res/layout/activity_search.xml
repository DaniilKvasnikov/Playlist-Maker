<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/background_settings"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/panel_header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/background_settings"
        app:navigationIcon="@drawable/ic_back_16"
        app:title="@string/text_search"
        app:titleTextAppearance="@style/HeaderTitleStyle"
        app:titleTextColor="@color/text_color_header_settings" />
    <FrameLayout
        android:id="@+id/searchContainer"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/rect_bg_search_container"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:paddingHorizontal="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:contentDescription="@null"
                android:src="@drawable/ic_search_icon_16"
                android:layout_marginEnd="8dp"
                app:tint="@color/icon_color_search" />

            <EditText
                android:id="@+id/edittext_serach"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:autofillHints=""
                android:hint="@string/text_search_edittext"
                android:textColorHint="@color/text_color_search"
                android:inputType="text"
                android:maxLines="1"
                android:imeOptions="actionSearch"
                android:background="@android:color/transparent"
                android:textSize="16sp"
                android:textColor="@color/text_color" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/button_clear"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="end|center_vertical"
            android:contentDescription="@null"
            android:src="@drawable/ic_clear_24"
            android:background="@android:color/transparent"
            app:tint="@color/text_color_search"
            android:visibility="gone"/>
    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        tools:listitem="@layout/item_track"/>
</LinearLayout>