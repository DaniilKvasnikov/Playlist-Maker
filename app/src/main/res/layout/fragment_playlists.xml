<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@color/not_found_icon"
        android:paddingHorizontal="14dp"
        android:paddingVertical="10dp"
        android:text="@string/new_playlist"
        android:textAllCaps="false"
        android:textColor="@color/not_found_text_refresh"
        android:textSize="14sp"
        android:fontFamily="@font/ys_display_medium"
        android:letterSpacing="0"
        app:cornerRadius="54dp" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="106dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="@null"
        android:src="@drawable/ic_empty_search_note_120" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="242dp"
        android:layout_marginHorizontal="24dp"
        android:fontFamily="@font/ys_display_medium"
        android:text="@string/playlist_empty"
        android:textAlignment="center"
        android:textColor="@color/item_track_header"
        android:textSize="19sp"/>

</FrameLayout>