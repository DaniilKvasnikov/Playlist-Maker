<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@color/background_settings">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/panel_header"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="start"
        android:visibility="visible"
        app:title="@string/text_settings"
        app:navigationIcon="@drawable/back"
        app:titleTextColor="@color/text_color_header_settings"
        app:titleTextAppearance="@style/HeaderTitleStyle"/>


        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/icon_padding"
            android:text="@string/dark_theme"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_settings"
            android:fontFamily="@font/roboto"
            android:theme="@style/DarkThemeSwitchStyle"/>

        <Button
            android:id="@+id/button_search"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:gravity="start"
            android:text="@string/text_share"
            android:textAllCaps="false"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_settings"
            app:backgroundTint="@color/button_color"
            app:icon="@drawable/share"
            app:iconGravity="end"
            app:iconPadding="@dimen/icon_padding"
            app:iconSize="@dimen/icon_size"
            app:iconTint="@color/icon_color_settings" />

        <Button
            android:id="@+id/button_library"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_support"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_settings"
            android:gravity="start"
            app:backgroundTint="@color/button_color"
            app:icon="@drawable/support"
            app:iconGravity="end"
            app:iconPadding="@dimen/icon_padding"
            app:iconSize="@dimen/icon_size"
            app:iconTint="@color/icon_color_settings"
            style="?android:attr/borderlessButtonStyle"
            android:textAllCaps="false"
            android:fontFamily="@font/roboto"/>

        <Button
            android:id="@+id/button_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_documents"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_settings"
            android:gravity="start"
            app:backgroundTint="@color/button_color"
            app:icon="@drawable/documents"
            app:iconGravity="end"
            app:iconPadding="@dimen/icon_padding"
            app:iconSize="@dimen/icon_size"
            app:iconTint="@color/icon_color_settings"
            style="?android:attr/borderlessButtonStyle"
            android:textAllCaps="false"
            android:fontFamily="@font/roboto"/>

</LinearLayout>