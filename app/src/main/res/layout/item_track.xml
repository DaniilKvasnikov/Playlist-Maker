<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="61dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:foreground="?attr/selectableItemBackground">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivArtwork"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="13dp"
        android:contentDescription="@string/music_icon_description"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_placeholder_45"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/item_track_image"/>

    <LinearLayout
        android:id="@+id/infoContainer"
        style="@style/item_track_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toEndOf="@id/ivArtwork"
        app:layout_constraintEnd_toStartOf="@id/ivChevron"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:maxLines="1"
            android:fontFamily="@font/ys_display_regular"
            android:textColor="@color/item_track_header"
            android:textSize="16sp"
            android:includeFontPadding="false"
            android:lineSpacingExtra="0dp"
            tools:text="Очень длинное название трека, которое обрежется многоточием." />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="wrap_content"
                android:maxWidth="100dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/ys_display_regular"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/item_track_info"
                android:textSize="11sp"
                tools:text="The Beatles" />

            <ImageView
                android:id="@+id/ivChevron2"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:contentDescription="@null"
                app:srcCompat="@drawable/ic_item_track_point_13"
                app:tint="@color/item_track_info" />

            <TextView
                android:id="@+id/tvDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ys_display_regular"
                android:maxLines="1"
                android:textColor="@color/item_track_info"
                android:textSize="11sp"
                tools:text="22:22" />
        </LinearLayout>
    </LinearLayout>




    <ImageView
        android:id="@+id/ivChevron"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:contentDescription="@string/abc_action_bar_up_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="12dp"
        app:srcCompat="@drawable/ic_arrow_forward_24"
        app:tint="@color/item_track_info"/>

</androidx.constraintlayout.widget.ConstraintLayout>
