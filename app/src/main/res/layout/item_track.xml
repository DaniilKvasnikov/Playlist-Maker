<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="61dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:foreground="?attr/selectableItemBackground"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivArtwork"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="13dp"
        android:contentDescription="@string/music_icon_description"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_placeholder_45"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        style="@style/item_track_image"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:scrollHorizontally="false"
        android:singleLine="true"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/ivArtwork"
        app:layout_constraintEnd_toStartOf="@+id/ivChevron"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/item_track_header"
        tools:text="Hello my dear friend"/>


    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="11sp"
        android:textColor="@color/item_track_info"
        app:layout_constraintStart_toStartOf="@+id/tvTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        tools:text="Hello my dear friend"/>

    <ImageView
        android:id="@+id/ivChevron2"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:contentDescription="@string/abc_action_bar_up_description"
        app:layout_constraintBottom_toBottomOf="@+id/tvSubtitle"
        app:layout_constraintStart_toEndOf="@+id/tvSubtitle"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        app:srcCompat="@drawable/ic_item_track_point_13"
        app:tint="@color/item_track_info" />

    <TextView
        android:id="@+id/tvDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/item_track_info"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvSubtitle"
        app:layout_constraintStart_toEndOf="@+id/ivChevron2"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        tools:text="22:22"/>


    <ImageView
        android:id="@+id/ivChevron"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:contentDescription="@string/abc_action_bar_up_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_forward_24"
        app:tint="@color/item_track_info"/>

</androidx.constraintlayout.widget.ConstraintLayout>
