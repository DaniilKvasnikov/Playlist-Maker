<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DarkThemeSwitchStyle">
        <item name="colorControlActivated">@color/DarkThemeSwitchColor</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:padding">@dimen/icon_padding</item>
        <item name="android:textColor">@color/text_color_settings</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_settings</item>
    </style>

    <style name="HeaderTitleStyle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="BaseScreenButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconSize">@dimen/icon_size</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="android:backgroundTint">@color/button_color</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="MainScreenButton" parent="BaseScreenButton">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/icon_color</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="SettingsScreenButton" parent="BaseScreenButton">
        <item name="android:textColor">@color/text_color_settings</item>
        <item name="android:textSize">@dimen/text_size_settings</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>
        <item name="iconGravity">end</item>
        <item name="iconTint">@color/icon_color_settings</item>
        <item name="iconPadding">0dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>